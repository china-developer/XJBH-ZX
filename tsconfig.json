{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noLib": false,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "baseUrl": ".", // 这代表相对于此文件的位置
    "paths": {
      "@/*": ["src/*"] // “*”代表src下的任何文件
    },
    "types": [
      "vite/client",
      "unplugin-icons/types/vue",
      "element-plus/global",
    ]
  },
  "include": [
    "mock/**/*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "vite.config.ts",
    "types/**.d.ts",
    "src/settings.js",
    "src/main.js"
, "src/components/HeaderSearch/FuseData.js"  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
